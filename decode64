#!/usr/bin/env python3
import sys
import base64

def main():
    if not sys.stdin.isatty():
        input_bytes = sys.stdin.buffer.read()
    elif len(sys.argv) > 1:
        input_bytes = ' '.join(sys.argv[1:]).encode()
    else:
        input_bytes = b''
    
    if input_bytes:
        try:
            decoded = base64.b64decode(input_bytes)
            print(decoded.decode(errors="replace"), end='')
        except Exception as e:
            print(f"Error decoding base64: {e}", file=sys.stderr)
            sys.exit(1)

if __name__ == "__main__":
    main()
